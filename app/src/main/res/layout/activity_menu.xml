<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_80sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nama_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toko Sejahtera"
                        android:textColor="@color/blue_400"
                        android:textStyle="bold"
                        android:textSize="@dimen/_30sdp"
                        android:minLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Membangun UMKM bersama Kopsan"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/_14sdp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/transaksi"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transaksi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:padding="@dimen/_9sdp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/blue_800"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saldo"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cek Saldo"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@color/blue_600"
                        android:textSize="@dimen/_16sdp"
                        android:padding="@dimen/_9sdp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/toko"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat Toko"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@color/blue_400"
                        android:textSize="@dimen/_16sdp"
                        android:padding="@dimen/_9sdp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>